[client]
default-character-set=utf8mb4

[mysqld]
character-set-server=utf8mb4

# #################
# innodb
# #################
innodb_file_per_table=ON

# #################
# slow query log
# #################
slow_query_log=ON
slow_query_log_file=/var/log/slow.log
long_query_time=3

# #################
# query cache
# #################
query_cache_limit=16M
query_cache_size=256M
query_cache_type=1

binlog-format=MIXED